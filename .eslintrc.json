{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["prettier"],
  "rules": {
    "linebreak-style": 0,
    "prettier/prettier": ["error", {"singleQuote": true, "parser": "flow","endOfLine":"auto"}],
    "no-unused-vars": "warn",
    "no-console": "off",
    "quotes": [2, "single", { "avoidEscape": true }],
    "func-names": "off",
    "no-plusplus": "off",
    "no-process-exit": "off",
    "class-methods-use-this": "off"
  }
}